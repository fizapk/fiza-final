{% extends '_templates/base.njk' %}
{% set relative_path = "../" %}
{% from '_macros/prose.njk' import prose %}

{% block page_title %}{{ headline }}{% endblock %}

{% block page_description %}{{ headline }} Fiza Kuzhiyil{% endblock %}

{% block content %}
  <article class="container">
    <div class="row">

      <div class="col-lg-4 pb-2">
        <img src="../img/{{ image }}" alt="image" class="img-fluid mb-4">
        <h1>{{ headline }}</h1>
        <p class="byline">by Fiza Kuzhiyil<p>
        <hr class="d-sm-none">
      </div>
      
      <div class="col-lg-8">
        <img src="{{ relative_path }} img/{{ articles.image }}" alt="" class="img-fluid mb-4">
        {{ prose(post) }}
      </div>
    </div>
  </article>
{% endblock %}